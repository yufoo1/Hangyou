<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/gray_5"
                android:startColor="@color/gray_5"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/blue_6"
                    android:startColor="@color/blue_3"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/pink_6"
                    android:startColor="@color/pink_3"/>
            </shape>

        </clip>
    </item>
</layer-list>