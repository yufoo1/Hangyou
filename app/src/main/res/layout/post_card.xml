<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/postCardUserName"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/postCardPostName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="171dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="154dp"
                    android:layout_height="29dp"
                    android:text="发布时间" />

                <TextView
                    android:id="@+id/postCardPostTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    app:srcCompat="@drawable/group_icon" />

                <TextView
                    android:id="@+id/num_of_like"
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    app:srcCompat="@drawable/tree_hole_icon" />

                <TextView
                    android:id="@+id/num_of_comment"
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>