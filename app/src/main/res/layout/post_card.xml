<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.hangyou.ui.home.CircleImageView
                        android:layout_marginTop="0dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/head_portrait">
                    </com.example.hangyou.ui.home.CircleImageView>

                    <TextView
                        android:id="@+id/postCardUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="用户名"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="0dp"
                        android:shadowColor="@color/gray_10" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postCardPostTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_7"
                    android:textSize="20sp"
                    android:text="发布时间"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/postCardPostName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="标题"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/gray_10" />

                <TextView
                    android:id="@+id/postText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/gray_10"
                    android:textSize="20sp"
                    android:gravity="top"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>