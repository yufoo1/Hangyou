<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/group_detail_page_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="组局名称"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/group_card_detail_groupName"
                    android:padding="8dp"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:background="@drawable/border">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="组局发起者"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/group_card_detail_groupInitiator"
                    android:padding="8dp"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:background="@drawable/border">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="组局成员"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <!-- 在ListView中可以让多个group_user水平排列吗？-->
                <ListView
                    android:id="@+id/group_people_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="0dp">
                </ListView>

                <LinearLayout
                    android:id="@+id/now_people_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="已组："
                        android:textStyle="bold"
                        android:textColor="@color/gray_13"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="男生"
                        android:textStyle="bold"
                        android:textColor="@color/blue_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:id="@+id/group_card_detail_groupMaleNowNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@color/blue_6"
                        android:textSize="25sp"
                        android:gravity="bottom"
                        android:shadowColor="@color/gray_7"
                        android:shadowRadius="0.1"
                        android:shadowDx="5"
                        android:shadowDy="5">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="人   "
                        android:textStyle="bold"
                        android:textColor="@color/blue_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="女生"
                        android:textStyle="bold"
                        android:textColor="@color/pink_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:id="@+id/group_card_detail_groupFemaleNowNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/pink_6"
                        android:textSize="25sp"
                        android:gravity="bottom"
                        android:shadowColor="@color/gray_7"
                        android:shadowRadius="0.1"
                        android:shadowDx="5"
                        android:shadowDy="5">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="人"
                        android:textStyle="bold"
                        android:textColor="@color/pink_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/need_people_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="仍需："
                        android:textStyle="bold"
                        android:textColor="@color/gray_13"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="男生"
                        android:textStyle="bold"
                        android:textColor="@color/blue_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:id="@+id/group_card_detail_groupMaleRequiredNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_6"
                        android:textSize="25sp"
                        android:gravity="bottom"
                        android:shadowColor="@color/gray_7"
                        android:shadowRadius="0.1"
                        android:shadowDx="5"
                        android:shadowDy="5">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="人   "
                        android:textStyle="bold"
                        android:textColor="@color/blue_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="女生"
                        android:textStyle="bold"
                        android:textColor="@color/pink_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:id="@+id/group_card_detail_groupFemaleRequiredNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/pink_6"
                        android:textSize="25sp"
                        android:gravity="bottom"
                        android:shadowColor="@color/gray_7"
                        android:shadowRadius="0.1"
                        android:shadowDx="5"
                        android:shadowDy="5">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="人"
                        android:textStyle="bold"
                        android:textColor="@color/pink_7"
                        android:textSize="18sp"
                        android:gravity="bottom">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detail_page_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detail_page_people"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="组局类型"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:id="@+id/group_card_detail_groupType"
                    android:gravity="bottom">
                </TextView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_haveempty"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/yellow_1"
                    app:cardCornerRadius="5dp">
                    <include layout="@layout/small_card_eat_layout"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detail_page_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detail_page_type"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="组局详细内容"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <TextView
                    android:id="@+id/group_card_detail_groupDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textColor="@color/gray_13"
                    android:textSize="16sp"
                    android:gravity="bottom"
                    android:shadowColor="@color/gray_7"
                    android:background="@drawable/border">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detail_page_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detail_page_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="组局时间"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <TextView
                    android:id="@+id/group_card_detail_groupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:background="@drawable/border">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detail_page_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detail_page_date"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="当前状态"
                    android:textStyle="bold"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom">
                </TextView>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="未加入"
                    android:textColor="@color/gray_13"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:background="@drawable/border">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detail_page_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/group_detail_page_status"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/group_card_detail_page_add_or_exit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="加入"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_1"
                    android:background="@drawable/button_red">
                </Button>
                <Button
                    android:id="@+id/group_card_detail_return"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="返回"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_1"
                    android:background="@drawable/button_red">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>