<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_achievement"
    android:background="@color/purple_2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_top_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="成就介绍"
                    android:textStyle="bold"
                    android:textColor="@color/blue_10"
                    android:textSize="25sp"
                    android:gravity="bottom">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_top_text">

                <LinearLayout
                    android:id="@+id/help_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/group_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1、如何提高成就值？"
                        android:textStyle="bold"
                        android:textColor="@color/gray_13"
                        android:textSize="20sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="发起组局一次+10分\n发布原创帖子一次+5分\n发表友善评论一次+2分\n为喜爱的帖子点赞一次+1分\n发布的帖子获得点赞一次+1分\n发布的帖子/组局被评论一次+2分\n完善个人信息一次+3分"
                        android:textColor="@color/gray_13"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/help_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/help_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2、成就值降低的原因有什么？"
                        android:textStyle="bold"
                        android:textColor="@color/gray_13"
                        android:textSize="20sp"
                        android:gravity="bottom">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="帖子被投诉一次-2分\n超过30天没有登录-10分\n帖子被投诉超过10次-5分"
                        android:textColor="@color/gray_13"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>